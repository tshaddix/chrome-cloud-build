{
  "manifest_version": 2,
  "name": "Chrome Cloud Build",
  "description": "Build your Chrome projects in the cloud, then run them locally.",
  "version": "0.0.1",
  "background": {
    "scripts": [
      "event.js"
    ],
    "persistent": true
  },
  "permissions": [
    "downloads"
  ],
  "browser_action": {
    "default_icon": {
      "19": "icons/icon19.png",
      "38": "icons/icon38.png"
    },
    "default_title": "Chrome Cloud Build"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}